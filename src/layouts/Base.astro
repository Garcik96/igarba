---
interface Props {
	title?: string
}

const { title = 'Iván García Ballesteros - Frontend Developer' } = Astro.props
---

<!doctype html>
<html lang='es' class='scroll-smooth'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Astro description' />
		<meta name='viewport' content='width=device-width' />
		<link rel='icon' type='image/svg+xml' href='/favicon.svg' />
		<meta name='generator' content={Astro.generator} />
		<title>{title}</title>
	</head>

	<body class='flex flex-col justify-center items-center | overflow-x-hidden | bg-black'>
		<slot />
	</body>
</html>
