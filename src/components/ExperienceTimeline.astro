---
import ExperienceCard from './ExperienceCard.astro'
import experiences from '../api/experience.json'
---

<section
	id='experience'
	class='w-full max-w-7xl | px-12 pt-6 pb-14 | relative | flex flex-col items-center gap-16 | overflow-hidden'
>
	<h1
		class='text-5xl md:text-7xl !leading-tight font-bold text-transparent bg-clip-text bg-gradient-to-r from-igarba-orange-800 via-igarba-orange-1000 to-igarba-orange-700'
	>
		Experiencia
	</h1>

	<div
		class='h-[calc(100%_-_10.5rem)] | border border-igarba-orange-1000 | absolute bottom-6 left-1/2 | transform -translate-x-1/2 | hidden md:block'
	>
	</div>

	{
		experiences.map((experience, index) => (
			<ExperienceCard
				position={index % 2 === 0 ? 'left' : 'right'}
				type={experience.type}
				name={experience.name}
				url={experience.url}
				img={experience.img}
				title={experience.title}
				startDate={experience.startDate}
				endDate={experience.endDate}
			/>
		))
	}
</section>
